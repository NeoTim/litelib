{
  "metadata": [
    {
      "src": [
        {
          "files": [ "src/**/*.cs" ],
          "exclude": [ "**/bin/**", "**/obj/**" ]
        }
      ],
      "dest": "obj/api"
    }
  ],
  "build": {
    "template": [
      "best-practices/templates/default"
    ],
    "content": [
      {
        "files": [ "**/*.yml" ],
        "cwd": "obj/api",
        "dest": "api"
      },
      {
        "files": [ "*.md", "toc.yml" ]
      }
    ],
    "resource": [
      {
        "files": [ "best-practices/resources/**", "litelib-logo.png" ]
      }
    ],
    "globalMetadata": {
      "_appTitle": "Unosquare LiteLib",
      "_enableSearch": true,
      "_appLogoPath": "best-practices/resources/images/logo.png",
      "_docLogo": "litelib-logo.png"
    },
    "dest": "_site"
  }
}